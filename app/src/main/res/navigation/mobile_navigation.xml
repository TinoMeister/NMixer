<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.nmixer.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/nav_recent"
        android:name="com.example.nmixer.ui.recent.RecentFragment"
        android:label="@string/menu_recent"
        tools:layout="@layout/fragment_recent" />

    <fragment
        android:id="@+id/nav_search"
        android:name="com.example.nmixer.ui.search.SearchFragment"
        android:label="@string/menu_search"
        tools:layout="@layout/fragment_search" />

    <fragment
        android:id="@+id/nav_top"
        android:name="com.example.nmixer.ui.top.TopFragment"
        android:label="@string/menu_top"
        tools:layout="@layout/fragment_top" />

    <fragment
        android:id="@+id/nav_liked"
        android:name="com.example.nmixer.ui.liked.LikedFragment"
        android:label="@string/menu_liked_Songs"
        tools:layout="@layout/fragment_liked" />

    <fragment
        android:id="@+id/nav_tools"
        android:name="com.example.nmixer.ui.tools.ToolsFragment"
        android:label="@string/menu_account_settings"
        tools:layout="@layout/fragment_tools" />
